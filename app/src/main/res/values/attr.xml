<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ForeverViewPager">
        <!--小圆点选中的形态 默认白色点-->
        <attr name="dot_select" format="reference"/>
        <!--小圆点未选中的形态 默认黑色点-->
        <attr name="dot_normal" format="reference"/>
        <!--小圆点大小-->
        <attr name="dot_size" format="dimension"/>

        <!--小圆点位置-->
        <attr name="dot_align" format="enum">
            <enum name="left" value="1" />
            <enum name="right" value="2"/>
            <enum name="center" value="3"/>
        </attr>
        <attr name="image_ScaleType" format="enum">
            <enum name="center_crop" value="0" />
            <enum name="center" value="1"/>
            <enum name="fit_center" value="2"/>
            <enum name="fit_xy" value="3"/>
        </attr>
        <!--是否显示小圆点 默认显示-->
        <attr name="dot_visible" format="boolean"/>
        <!--轮播时间 默认2000毫秒-->
        <attr name="interval" format="integer"/>
        <!--是否轮播 默认轮播-->
        <attr name="carousel" format="boolean"/>
    </declare-styleable>
</resources>